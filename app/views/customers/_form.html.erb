            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Active, including travel</span>
          </label>

        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_occupation">When was your last massage?</label>
        <div class="custom-controls-stacked col-sm-7">
          <label class="custom-control custom-radio">
            <%= f.radio_button :last, :id=>"sedentary", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description"> 0 - 3 months </span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :last, :id=>"active", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">3 - 6 months</span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :last, :id=>"active2", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">6 - 12 months</span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :last, :id=>"active2", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">1 - 10 years</span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :last, :id=>"active2", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">never</span>
          </label>
        </div>
      </div>


      <div class="form-group row">

        <label class="col-sm-3 col-form-label" for="customer_occupation">Male / Female</label>
        <div class="custom-controls-stacked col-sm-7">
          <label class="custom-control custom-radio">
            <%= f.radio_button :male, :id=>"0", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Female </span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :male, :id=>"1", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Male </span>
          </label>


        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_occupation">Weekly exercise frequency</label>
        <div class="custom-controls-stacked col-sm-7">
          <label class="custom-control custom-radio">
            <%= f.radio_button :exercise, :id=>"5 times", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description"> +5 times </span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :exercise, :id=>"3 times", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">3 times</span>
          </label>
          <label class="custom-control custom-radio">
