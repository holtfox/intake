    <%= f.label :contagious_skin, :class=> 'col-sm-8' %>
    <%= f.check_box :contagious_skin %>
  </div>

  <div class="col-sm-5">
    <%= f.label :open_sores, :class=> 'col-sm-8' %>
    <%= f.check_box :open_sores %>
