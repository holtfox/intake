            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">1 time </span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :exercise, :id=>"0 times", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">0 times </span>
          </label>

        </div>
      </div>

      <div class="form-group row">
      <label class="col-sm-8 col-form-label" >If you have any of the following, please click the box and describe further in the adjacent text box.</label>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_referal">Any Allergies?</label>
        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :allergies %>
      </span>
            <%= f.text_field :allergies_string, :class=> 'form-control' %>
          </div>
        </div>
      </div>


      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_referal">Current Stiffness?</label>

        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :current_stiffness %>
      </span>
            <%= f.text_field :current_stiffness_string, :class=> 'form-control' %>
