        <label class="col-sm-3 col-form-label" for="customer_referal">Blood pressure issues?</label>
        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :blood_pressure %>
      </span>
            <%= f.text_field :blood_pressure_string, :class=> 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_referal">Artificial limbs?</label>
        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :artificial %>
      </span>
            <%= f.text_field :artificial_string, :class=> 'form-control' %>
