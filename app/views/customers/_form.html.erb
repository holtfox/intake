        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_referal">Spinal issues/surgery?</label>
        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :spinal %>
      </span>
            <%= f.text_field :spinal_string, :class=> 'form-control' %>
          </div>
        </div>
      </div>


      <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="customer_referal">Medical supervision?</label>
        <div class="col-sm-7">
          <div class="input-group">
      <span class="input-group-addon">
        <%= f.check_box :medical_supervision %>
      </span>
            <%= f.text_field :medical_supervision_string, :class=> 'form-control' %>
