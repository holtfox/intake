          <label class="custom-control custom-radio">
            <%= f.radio_button :referal, :id=>"friend", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Friend</span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :referal, :id=>"other", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Other</span>
          </label>

        </div>
  </div>

      <div class="form-group row">

        <label class="col-sm-3 col-form-label" for="customer_occupation">Occupation</label>
        <div class="custom-controls-stacked col-sm-7">
          <label class="custom-control custom-radio">
            <%= f.radio_button :occupation, :id=>"sedentary", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Sedentary</span>
          </label>
          <label class="custom-control custom-radio">
            <%= f.radio_button :occupation, :id=>"active", :class=>"custom-control-input" %>
            <span class="custom-control-indicator"></span>
            <span class="custom-control-description">Active</span>
          </label>
          <label class="custom-control custom-radio">
